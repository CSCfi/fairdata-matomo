---
apache2:
    port: 443
    serverName: someserver.example.com
    ssl:
        key: /etc/letsencrypt/live/someserver.example.com/privkey.pem
        cert: /etc/letsencrypt/live/someserver.example.com/fullchain.pem
    proxy:
        protocol: http
        host: 127.0.0.1
        port: 8080
        path:
            external: /
            internal: /